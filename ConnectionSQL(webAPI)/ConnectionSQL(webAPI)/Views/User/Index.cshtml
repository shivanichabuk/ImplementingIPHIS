@model ConnectionSQL_webAPI_.Models.UserRecords

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <center>
        <h1>User Details</h1>
        @if (Model != null)
        {
            if(Model.userinfo.Count>0)
            {
                <table border="1">
                    <tr>
                        <th>First Name</th>
                        <th>Middle Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Phone Number</th>
                    </tr>
                    @foreach(var item in Model.userinfo)
                    {
                    <tr>
                        <td>@Html.DisplayFor(m => item.FirstName)</td>
                        <td>@Html.DisplayFor(m => item.MiddleName)</td>
                        <td>@Html.DisplayFor(m => item.LastName)</td>
                        <td>@Html.DisplayFor(m => item.EmailAddress)</td>
                        <td>@Html.DisplayFor(m => item.Password)</td>
                        <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                    </tr>
                    }
                </table>
            }
        }
    </center>
</body>
</html>
